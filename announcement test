<img src="x" onerror="
  (function() {
    const url = 'https://api.allorigins.win/get?url=' + encodeURIComponent('https://www.wildwest.gg/api/users/hypoor');
    fetch(url)
      .then(response => response.json())
      .then(data => {
        const userData = JSON.parse(data.contents);
        const game = userData.data.games.find(g => g.id === '69ea5b13-c66a-4cfa-9714-f120ae6810b9');
        if (game) {
          const playCount = game.play_count;
          const announcement = document.querySelector('#global-announcement');
          if (announcement) {
            announcement.textContent = `we are currently at ${playCount} current plays we are getting close to 100k`;
          }
        }
      })
      .catch(console.error);
  })()
">
